<%- await include('./components/head.ejs', {title: "Login"}) %>

<div class="d-flex flex-column min-vh-100">
    <%- await include('./components/header.ejs') %>

    <main class="container d-flex flex-column align-items-center w-75 mt-5 pt-4 flex-grow-1">
        <h1 class="h1">Bem vindo de volta!</h1>

        <% if (error) { %>
            <div class="alert alert-danger w-50 mt-4" role="alert">
                <%= error %>
            </div>
        <% } %>

        <form action="/login" method="post" class="container w-50 fs-6 mt-4 text-black-50">
            <div class="mb-4">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" class="form-control text-black-50"
                id="email" placeholder="Digite seu e-mail" name="email" required>
            </div>

            <div class="mb-5">
                <label for="password" class="form-label">Senha</label>
                <input type="password" id="password" class="form-control text-black-50" aria-describedby="password"
                placeholder="Digite sua senha" name="password" required>
            </div>

            <div class="btn-group w-100">
                <button class="btn btn-dark rounded-pill" type="submit">Entrar</button>
            </div>
        </form>

        <div class="text-center">
            <p class="mt-5 fs-6 text-black-50">NÃ£o tem uma conta?
                <a href="/register" class="link-primary link-offset-2 link-underline-opacity-25
                link-underline-opacity-100-hover">
                    Registre-se
                </a>
            </p>
        </div>
    </main>

    <%- await include('./components/footer.ejs') %>
</div>

